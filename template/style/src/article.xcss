article {
    --bs-body-font-size: 14px;
    font-size: var(--bs-body-font-size);

    p,
    li {
        line-height: 1.75;
    }

    h1 {
        margin-bottom: 1em;
        font-size: 1.8em;
        font-weight: 600;

        & :first-child {
            font-size: 2.35em;
        }
    }
    
    h2 {
        margin-block: 3.75em 1.25em;
        font-size: 1.5em;
        font-weight: 600;
        
        padding-top: 1.5em;
        border-top: 1px solid --bs-border-color;
    }

    h3 {
        margin-block: 3em 1em;
        font-size: 1.3em;
        font-weight: 500;
    }

    h4 {
        font-weight: 500 !important;
        font-size: 1.15em;
        margin-block: 2.5em .8em;
    }

    a {
        text-decoration: none;
        text-underline-offset: 3px;

        & :hover {
            text-decoration: underline;
        }
    }

    img {
        display: block;
        margin-inline: auto;
    }

    dl {
        dt > code {
            background: #f5f5f5;
            font-size: 15px !important;
            padding: 5px 10px;
            color: black;
            font-weight: 600;
        }

        dd {
            margin-left: 0 !important;
        }

        & .inheritedMembers,
        & .inheritance,
        & .derived {
            display: none;
        }
    }
}

html {
    article pre > .code-action {
        top: .5em;
        opacity: .7;

        & :hover {
            opacity: 1;
        }
    }

