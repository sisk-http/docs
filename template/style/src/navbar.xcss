header.bg-body {
    backdrop-filter: blur(7px) saturate(1.5);
    background-color: rgba(var(--bs-body-bg-rgb), .25);


    nav.navbar {
        a.navbar-brand > img {
            width: 48px;
            height: 48px;
            margin-right: 16px;
        }

        #navbar {
            .nav-item {
                padding-inline: .8rem;
                font-weight: 500;

                > .active {
                    color: --primary;
                }
            }
        }
    }
}